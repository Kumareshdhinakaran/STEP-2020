<%- include ('../partial/header') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info1</li>
        <li class="list-group-item">Info2</li>
        <li class="list-group-item">Info3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img class="img-responsive" src="<%=data.img%>" />
        <div class="card-body">
          <div class="row pl-3 pr-3">
            <h4 class="card-title"><a href=""><%= data.name %></a></h4>
            <h4 class="ml-auto">$9.00/night</h4>
          </div>
          <p class="card-text"><%= data.description %></p>
        </div>
      </div>
      <div class="card card-body bg-light mt-3 mb-4">
        <div class="row pl-3 pr-3">
          <h3>Comments:</h3>

          <a
            class="btn btn-success ml-auto"
            href="/campgrounds/<%=data._id%>/comments/new"
            >Add a new comment</a
          >
        </div>
        <hr />

        <%data.comments.forEach(function(element){%>
        <div class="row">
          <div class="col-md-12">
            <p>
              <strong><%= element.author %></strong>
              <span class="float-right">10 days ago</span>
            </p>
            <p><%= element.text %></p>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
</div>
<%- include ('../partial/footer') %>
