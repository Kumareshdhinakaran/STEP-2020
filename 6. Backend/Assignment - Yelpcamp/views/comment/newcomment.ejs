<%- include ('../partial/header') %>

<div class="container pt-5">
  <h2 class="text-center">Add new Comment to <%= data.name %>!!</h2>
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= data._id %>/comments" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[author]"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="text goes here"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%=data._id%>">Go back</a>
    </div>
  </div>
</div>

<%- include ("../partial/footer")%>
